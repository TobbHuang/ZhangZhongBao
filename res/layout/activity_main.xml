<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pekinguniverdemo.MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_mainpage_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/view_pager_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_pager_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-15dp"
            android:gravity="right"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_mainpage_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_btn1_mainpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_mainpage"
            android:text="我要借款"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_btn2_mainpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_mainpage"
            android:text="我要出借"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_btn3_mainpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_mainpage"
            android:text="小工具"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_btn4_mainpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_mainpage"
            android:text="个人中心"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ly_mainpage_button"
        android:layout_below="@id/rl_mainpage_ad"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_mainpage_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mainpage_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >
            
            <TextView 
                android:id="@+id/tv_mainpage_introduction"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/tv_style_mainpage"
                android:layout_marginLeft="60dp"
                android:text="业务\n介绍"
                android:gravity="center" />
                
            <TextView
                android:id="@+id/tv_mainpage_communication"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/tv_style_mainpage"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:text="联系\n我们"
                android:gravity="center" />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >
            
            <TextView 
                android:id="@+id/tv_mainpage_help"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/tv_style_mainpage"
                android:layout_centerInParent="true"
                android:text="帮助"
                android:gravity="center" />
            
        </RelativeLayout>
        
    </LinearLayout>

</RelativeLayout>
